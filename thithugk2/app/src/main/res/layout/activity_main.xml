<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_background"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ntu_logo"
        android:layout_gravity="center"
        android:translationY="-150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="524dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:translationY="-150dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="15dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="25dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/banner"
                android:scaleType="fitXY"
                />
        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="20dp"
                    android:text="Chức năng 2"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/mbtnCN2"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="20dp"
                    android:text="Chức năng 3"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/mbtnCN3"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="20dp"
                    android:text="Chức năng 4"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/mbtnCN4"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="20dp"
                    android:text="AboutMe"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/mbtnAboutMe"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mbtnPuzzle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/colorSecondary"
                    app:cornerRadius="20dp"
                    android:text="Puzzle"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>