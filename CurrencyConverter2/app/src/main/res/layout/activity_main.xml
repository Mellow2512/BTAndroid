<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/header_gradient"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency Converter"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD â†” INR"
            android:textSize="14sp"
            android:textColor="#E8F0FE" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="25dp"
                android:elevation="6dp">

                <!-- USD Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‡ºðŸ‡¸"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="US Dollar"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A2E"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USD"
                            android:textSize="12sp"
                            android:textColor="#5B7EF5"
                            android:background="@drawable/currency_tag_background"
                            android:padding="6dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtUSD"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/input_background"
                        android:padding="16dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:hint="0.00"
                        android:textColorHint="#C0C0C0"
                        android:textColor="#1A1A2E" />
                </LinearLayout>

                <!-- Swap Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginBottom="30dp">

                    <Button
                        android:id="@+id/btnSwap"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/swap_button_background"
                        android:text="â‡„"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- INR Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‡»ðŸ‡³"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vietnamese Dong"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A2E"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VND"
                            android:textSize="12sp"
                            android:textColor="#5B7EF5"
                            android:background="@drawable/currency_tag_background"
                            android:padding="6dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtINR"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/input_background"
                        android:padding="16dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:hint="0.00"
                        android:textColorHint="#C0C0C0"
                        android:textColor="#1A1A2E" />
                </LinearLayout>

                <!-- Exchange Rate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rate_background"
                    android:padding="12dp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 USD = "
                        android:textSize="13sp"
                        android:textColor="#5B7EF5"
                        android:layout_marginEnd="5dp" />

                    <TextView
                        android:id="@+id/tvRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25.450 VND"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A2E" />
                </LinearLayout>

                <!-- Convert Button -->
                <Button
                    android:id="@+id/btnConvert"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="CONVERT"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_background"
                    android:stateListAnimator="@null" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>