<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header với nút back -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Chi tiết công trình"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card chứa thông tin công trình -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Tên công trình -->
                    <TextView
                        android:id="@+id/tvTenCongTrinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Công trình Nhà Đa Năng Đại học Nha Trang"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Thời gian thi công -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Thời gian thi công:"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvThoiGian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01/05/2024 - 01/05/2025"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Địa điểm -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm:"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDiaDiem"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Khuôn viên Trường Đại học Nha Trang"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Đơn vị thi công -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Đơn vị thi công:"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDonVi"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Công ty Xây dựng Hòa Bình"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Chủ đầu tư -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Chủ đầu tư:"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDoiTuong"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Trường Đại học Nha Trang"
                            android:textColor="#333333"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card mô tả công trình -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới thiệu công trình"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvMoTa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Công trình Nhà Đa Năng là dự án trọng điểm phục vụ nhu cầu học tập, thể thao và tổ chức sự kiện lớn của sinh viên Đại học Nha Trang."
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card nội dung thi công -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nội dung thi công"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvNoiDung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Thi công nền móng và khung kết cấu\n• Lắp đặt hệ thống điện, nước, thông gió\n• Hoàn thiện nội thất và ngoại thất\n• Thi công sân thể thao, bãi xe và cảnh quan xung quanh"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card lợi ích công trình -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lợi ích công trình"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvLoiIch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Tạo không gian học tập và thể thao hiện đại\n• Tăng cường cơ sở vật chất cho sinh viên\n• Đáp ứng nhu cầu tổ chức sự kiện quy mô lớn\n• Góp phần phát triển hạ tầng trường đại học"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_back_24"
                android:layout_gravity="bottom|end"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/btnBack"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
