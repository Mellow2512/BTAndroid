<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Ảnh nền -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_background"
        android:scaleType="fitXY" />

    <!-- Logo giữa -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/building_logo"
        android:layout_gravity="center"
        android:translationY="-100dp" />

    <!-- GridLayout chứa 4 button 2x2 -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:layout_gravity="center"
        android:translationY="-80dp">

        <!-- Nút 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnCN2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="Chức năng 2"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Nút 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnCN3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="Chức năng 3"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Nút 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnCN4"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="Chức năng 4"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <!-- Nút 4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnAboutMe"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="About Me"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />
    </GridLayout>
</LinearLayout>
