<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Ảnh nền -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_background"
        android:scaleType="fitXY" />

    <!-- Logo giữa -->
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/building_logo"
        android:layout_gravity="center"
        android:translationY="-187dp" />

    <!-- GridLayout chứa 4 button 2x2 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:rowCount="2"
        android:translationY="-100dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnCN2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Tính diện tích"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnCN3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Vật liệu"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnCN4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Công trình"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbtnAboutMe"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Giới thiệu"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />
    </GridLayout>
</LinearLayout>
